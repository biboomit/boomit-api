# Application Configuration
APP_NAME=Boomit AI API
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration  
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=TEST
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_PREFIX=/api/v1
ALLOWED_HOSTS=localhost
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
DEFAULT_PER_PAGE=20
MAX_PER_PAGE=100

# Google Cloud / BigQuery
GOOGLE_CLOUD_PROJECT=your-gcp-project-id # TODO
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json # TODO
BIGQUERY_DATASET=boomit_analytics # TODO
BIGQUERY_LOCATION=US

# Database Configuration
BQ_MAX_CONNECTIONS=10
BQ_CONNECTION_TIMEOUT=60
BQ_QUERY_TIMEOUT=300

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,excel,csv
UPLOAD_DIRECTORY=uploads

# # External Services
# LOOKER_BASE_URL=https://looker.boomit.ai
# LOOKER_CLIENT_ID=your-looker-client-id
# LOOKER_CLIENT_SECRET=your-looker-client-secret

# # Monitoring
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# ENABLE_METRICS=true
# ENABLE_TRACING=true
# METRICS_PORT=9090

# Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300
ENABLE_CACHE=false

# # Email
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_TLS=true
# FROM_EMAIL=noreply@boomit.ai

# Documentation
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json