# Application Configuration
APP_NAME=Boomit AI API
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration  
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=TEST
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# WebSocket Configuration
# IMPORTANT: Always set to 'true' in production for security
# Tokens are sent via Sec-WebSocket-Protocol header (not in URLs)
WEBSOCKET_AUTH_REQUIRED=false  # Set to true in production

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain
AUTH0_AUDIENCE=your-auth0-audience
AUTH0_ALGORITHMS=RS256

# API Configuration
API_V1_PREFIX=/api/v1
ALLOWED_HOSTS=localhost
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
DEFAULT_PER_PAGE=20
MAX_PER_PAGE=100
DEFAULT_STATE=ALL

# Google Cloud / BigQuery
GOOGLE_CLOUD_PROJECT=your-gcp-project-id # TODO
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json # TODO
BIGQUERY_DATASET=boomit_analytics # TODO
BIGQUERY_LOCATION=US

# Database Configuration
BQ_MAX_CONNECTIONS=10
BQ_CONNECTION_TIMEOUT=60
BQ_QUERY_TIMEOUT=300

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_BATCH_SIZE=1
OPENAI_MODEL=gpt-example-model

# Cloud Run Services (Batch Processing)
# URLs for triggering batch analysis jobs
EMERGING_THEMES_CLOUD_RUN_URL=https://download-emerging-themes-batch-715418856987.us-central1.run.app
REVIEWS_ANALYSIS_CLOUD_RUN_URL=https://download-batch-715418856987.us-central1.run.app
REPORT_SERVICE_URL=https://boomit-report-715418856987.us-central1.run.app

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,excel,csv
UPLOAD_DIRECTORY=uploads

# # External Services
# LOOKER_BASE_URL=https://looker.boomit.ai
# LOOKER_CLIENT_ID=your-looker-client-id
# LOOKER_CLIENT_SECRET=your-looker-client-secret

# # Monitoring
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# ENABLE_METRICS=true
# ENABLE_TRACING=true
# METRICS_PORT=9090

# Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300
ENABLE_CACHE=false

# # Email
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_TLS=true
# FROM_EMAIL=noreply@boomit.ai

# Documentation
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json